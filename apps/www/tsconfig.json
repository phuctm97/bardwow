{
  "extends": "tsconfig/tsconfig.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": { "~/*": ["./*"] }
  },
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.cts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "out"]
}
