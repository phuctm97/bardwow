{
  "manifest_version": 3,
  "name": "Bard Wow!",
  "description": "Save & share Bard conversations. Discover & use Bard prompts. Enhance Bard with more features. It's free & open-source.",
  "version": "0.0.0",
  "background": { "service_worker": "background.js" },
  "options_page": "index.html",
  "content_scripts": [
    { "matches": ["https://bard.google.com/"], "js": ["content.js"] }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage"]
}
